# Database Configuration (can be stored in Key Vault as DB-HOST, DB-USERNAME, DB-PASSWORD)
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=your_database_username
DB_PASSWORD=your_database_password

# Service Ports
API_GATEWAY_PORT=3000
BOOKING_SERVICE_PORT=3001
USER_SERVICE_PORT=3002

# JWT Configuration (can be stored in Key Vault as JWT-SECRET, JWT-EXPIRATION)
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=1d

# PayHere Configuration (can be stored in Key Vault as PH-MERCHANT-ID, PH-MERCHANT-SECRET, etc.)
PH_MERCHANT_ID=your_payhere_merchant_id
PH_MERCHANT_SECRET=your_payhere_merchant_secret
PH_APP_ID=your_payhere_app_id
PH_APP_SECRET=your_payhere_app_secret
FRONTEND_URL=http://localhost:4200
BACKEND_URL=http://localhost:3000

# Azure Key Vault Configuration
# URL format: https://your-vault-name.vault.azure.net/
AZURE_KEY_VAULT_URL=https://your-key-vault-name.vault.azure.net/

# Azure Authentication (Optional - DefaultAzureCredential will use these if needed)
# Usually not needed if you're logged in via Azure CLI or have Managed Identity
# AZURE_TENANT_ID=your-tenant-id
# AZURE_CLIENT_ID=your-client-id
# AZURE_CLIENT_SECRET=your-client-secret
