{
  "name": "@charmbooking/common",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start:dev": "tsc -p tsconfig.json --watch",
    "typeorm": "typeorm-ts-node-commonjs",
    "typeorm:generate": "npm run typeorm migration:generate -- -d ./src/data-source.ts",
    "typeorm:create": "npm run typeorm migration:create --",
    "typeorm:migrate": "npm run typeorm migration:run -- -d ./src/data-source.ts",
    "typeorm:revert": "npm run typeorm migration:revert -- -d ./src/data-source.ts",
    "typeorm:drop": "npm run typeorm schema:drop -- -d ./src/data-source.ts",
    "typeorm:show": "npm run typeorm migration:show -- -d ./src/data-source.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.10.0",
  "dependencies": {
    "@azure/identity": "^4.13.0",
    "@azure/keyvault-secrets": "^4.10.0",
    "@nestjs/common": "^11.1.3",
    "@nestjs/core": "^11.1.3",
    "@nestjs/microservices": "^11.1.0",
    "@nestjs/typeorm": "^11.0.0",
    "class-validator": "^0.14.2",
    "dotenv": "^17.0.1",
    "mysql2": "^3.14.1",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.25"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
